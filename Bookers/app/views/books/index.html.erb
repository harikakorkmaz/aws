<!DOCTYPE HTML>
  <html>
    <head>
      <meta charset="UTF-8">
      <link rel="stylesheets" href="books.scss">
    </head>
    <body>
      <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      <h1>Books</h1>
      <table>
        <tr><th>Title</th><th>Body</th></tr>
        <% @books.each do |book| %>
        <tr><td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book), {class: "contents"} %></td>
        <td><%= link_to "Edit", edit_book_path(book), {class: "contents"} %></td>
        <td><%= link_to("Destroy", book_path(book), method: :delete, class: "contents", data: {confirm:"Are you sure?"}) %></td></tr>
        <% end %>
      </table>
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
         <% if @book.errors.any? %>
            <% @book.errors.full_messages.each do |message| %>
              <li>error <%= message %></li>
             <% end %>
         <% end %>
      <div class="field">
        <p class="contents">Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_title">Title</label>
        <input class="book_title" type="text" name="book[title]" id="book_title" />
      </div>


      
      
      
      
      <div class="field">
        <p class="contents">Body</p>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </body>
  </html>