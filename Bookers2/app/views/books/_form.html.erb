              <form>
                <div class='row'>
                  <%= link_to "col-xs-12 btn btn-default glyphicon glyphicon-wrench" edit_user_path %>
                </div>
                <h2>New book</h2>
                <%= form_with model:@book, local:true do |f| %>
                  <% if @book.errors.any? %>
                    <% book.errors.full_messages.each do |message| %>
                      <li>error <%= message %></li>
                    <% end %>
                  <% end %>
                  <div class="field row">
                    <label for="book_title">Title</label><br>
                    <%= f.text_field :title %>
                  </div>
                  <div class="field row">
                    <label for="book_opinion">Opinion</label><br>
                    <%= f.text_area :body %>
                  </div>
                  <div class="actions row">
                    <%= f.submit 'Create Book' %>
                  </div>
                <% end %>
              </form>