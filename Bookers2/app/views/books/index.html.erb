<div class='container'>
  <div class='row'>
    <div class='col-lg-3'>
      <%= render 'list' %>
      <%= render 'form' %>
    </div>
    <div class='col-lg-9'>
      <h2>Books</h2>
      <table class='table'>
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <%= @books.each do |book| %>
            <td><=%= attachment%></td>
            <td><%= link_to book.title, show_book_path(book) %></td>
            <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
